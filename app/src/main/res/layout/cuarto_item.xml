<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewCuarto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical">
        <!-- Nombre del cuarto -->
        <TextView
            android:id="@+id/txt_nombre_cuarto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Cuarto"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <!-- Precio del cuarto -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio:" />
            <!-- Precio del cuarto -->
            <TextView
                android:id="@+id/txt_precio_cuarto"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:text="5000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <!-- Descripción del cuarto -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción:" />
            <!-- Descripción del cuarto -->
            <TextView
                android:id="@+id/txt_descripcion_cuarto"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:text="Descripción del Cuarto" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <!-- Características del cuarto -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Características del Cuarto" />
            <!-- Características del cuarto -->
            <TextView
                android:id="@+id/txt_caracteristicas_cuarto"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:text="Características del Cuarto" />

        </LinearLayout>
        <!-- Imagen del cuarto -->
        <ImageView
            android:id="@+id/img_cuarto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/vb"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Botón "Ver más" -->
        <Button
            android:id="@+id/btn_ver_mas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver más"
            android:textColor="@android:color/white"
            android:background="@color/stay"
            android:layout_gravity="end" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
